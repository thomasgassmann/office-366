{
    "manifest_version": 2,
    "name": "Office 366",
    "version": "1.0.0",
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.sharepoint.com/*"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "background": {
        "page": "index.html#/event-page",
        "persistent": false
    },
    "browser_action": {
        "default_title": "Office 366 Settings",
        "default_popup": "index.html#/popup"
    },
    "icons": {
        "16": "assets/icon-16.png",
        "19": "assets/icon-19.png",
        "38": "assets/icon-38.png",
        "128": "assets/icon-128.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}